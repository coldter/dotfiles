# general
alias cat='bat'
alias ll='ls -lah'
alias cpr='cp -r'
alias rr='rm -rf'
alias mn='mv -vn'
alias uz='unzip'
alias uzl='unzip -l'
alias tree='tree -a -I ".svn|.git|.hg|.idea"'
alias tree2='tree -L 2'
alias tree3='tree -L 3'
alias k9='kill -9'
alias hx='helix'

# editor
alias c='code'
alias v='nvim'
alias vi='nvim'
alias vim='nvim'

# unix
alias md='mkdir -p'
alias wh='which'
alias s1='sleep 1'
alias s2='sleep 2'
alias s01='sleep 0.1'
alias s05='sleep 0.5'
alias L='| less'
alias H='| head'
alias T='| tail'
alias G='| grep'
alias Gv='| grep -v'
alias Gc='| grep --color=always'
alias Gi='| grep -i'

# systemctl
alias sc='systemctl'
alias scs='systemctl status'
alias sce='systemctl enable'
alias scd='systemctl disable'
alias scr='systemctl restart'
alias scst='systemctl start'
alias scsp='systemctl stop'
alias scdr='systemctl daemon-reload'
alias jctl='sudo journalctl -b -n 200 -f'

# docker
alias k='kubectl'
